<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/oranje_normal"
    tools:context=".RegistroActivity"
    android:gravity="center">

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="630dp"
        android:orientation="vertical"
        android:background="@drawable/redondea_liner"
        android:gravity="center">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="InformaciÃ³n de usuario"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="left"/>

        <EditText
            android:id="@+id/editNombre"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:ems="1"
            android:inputType="text"
            android:background="@color/gray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="Apellido Paterno:"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="left"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Apellido Materno:"
                android:textSize="15dp"
                android:paddingLeft="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="left"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/editpaterno"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:ems="1"
                android:inputType="text"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp">
            </LinearLayout>

            <EditText
                android:id="@+id/editMaterno"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:ems="1"
                android:inputType="text"
                android:background="@color/gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Edad:"
                android:paddingLeft="45dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="left"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Sexo:"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/editEdad"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:ems="1"
                android:inputType="number"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="30dp">
            </LinearLayout>

            <EditText
                android:id="@+id/editSexo"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:ems="1"
                android:inputType="text"
                android:background="@color/gray"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Correo electronico:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="left"/>

        <EditText
            android:id="@+id/editCorreo"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:ems="1"
            android:inputType="text"
            android:background="@color/gray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="50dp">
        <CheckBox
            android:id="@+id/checkBoxDiscapacidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discapacidades"
            />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Nombre de la discapacidad:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="left"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <EditText
                    android:id="@+id/editDiscapacidad"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:ems="1"
                    android:inputType="text"
                    android:background="@color/gray"
                    />

                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="30dp">
                </LinearLayout>

                <Button
                    android:id="@+id/buttonConstancia"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/botton_archivos"
                    android:textSize="8dp"
                    android:text="Agregar constancia" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="50dp">
            <CheckBox
                android:id="@+id/checkBoxEstudiante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estudiante"
                />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Institucion a la que pertenece:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="left"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <EditText
                    android:id="@+id/editInstitucion"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:ems="1"
                    android:inputType="text"
                    android:background="@color/gray"
                    />

                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="30dp">
                </LinearLayout>

                <Button
                    android:id="@+id/buttonCredencial"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/botton_archivos"
                    android:textSize="8dp"
                    android:text="Agregar credencial" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="20dp">
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingLeft="50dp">
        <CheckBox
            android:id="@+id/checkBoxTerceraEdad"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Tercera edad"
            />

        <Button
            android:id="@+id/buttonTerceraEdad"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/botton_archivos"
            android:text="Agregar credencial"
            android:textSize="8dp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/buttonCancelR"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/button_cancelar"
                android:text="Cancelar"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="20dp">
            </LinearLayout>

            <Button
                android:id="@+id/buttonRegistry"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/button_register"
                android:text="Continuar"
                android:textStyle="bold"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>