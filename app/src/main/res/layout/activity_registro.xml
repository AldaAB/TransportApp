<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/oranje_normal"
    tools:context=".RegistroActivity"
    android:gravity="center">

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="630dp"
        android:orientation="vertical"
        android:background="@drawable/redondea_liner"
        android:gravity="center">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_horizontal"
            android:text="Información de usuario"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Nombre completo:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity=""/>

        <EditText
            android:id="@+id/editNombre"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:ems="1"
            android:inputType="text"
            android:background="@color/gray"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Sexo:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="20dp"/>

            <Spinner
                android:id="@+id/spinnerSexo"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/gray"
                android:entries="@array/gender_options"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Correo electronico:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:gravity="left"/>

        <EditText
            android:id="@+id/editCorreo"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:ems="1"
            android:inputType="textEmailAddress"
            android:background="@color/gray"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textView23"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Contraseña:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingLeft="17dp"
            android:textColor="@color/black"
            android:gravity="left"/>

        <TextView
            android:id="@+id/textView24"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="left"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:ems="1"
                android:inputType="textPassword"
                android:background="@color/gray"
                />

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="30dp">
            </LinearLayout>

            <EditText
                android:id="@+id/editUser"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:ems="1"
                android:inputType="text"
                android:background="@color/gray"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Tipo de usuario:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="20dp"/>

            <Spinner
                android:id="@+id/spinnerUserType"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/gray"
                android:entries="@array/gender_options"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="60dp">
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/buttonCancelR"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/button_cancelar"
                android:text="Cancelar"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="20dp">
            </LinearLayout>

            <Button
                android:id="@+id/buttonRegistry"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/button_register"
                android:text="Registrar"
                android:textStyle="bold"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>