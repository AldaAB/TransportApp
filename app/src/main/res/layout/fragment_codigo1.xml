<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".CodigoFragment1">

    <LinearLayout
        android:id="@+id/Liner6"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/orange_ligth"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="103dp"
            android:layout_height="20dp"
            android:background="@drawable/carga_resource">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="649dp"
        android:layout_below="@+id/Liner6"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="1. ¿Cual es tu ruta?"
            android:gravity="center"
            android:textSize="19dp"
            android:paddingTop="30dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:paddingLeft="60dp"
            android:gravity="bottom"
            android:paddingRight="100dp">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subi en:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/origenSpinner"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:background="@color/white"
                android:paddingLeft="10dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:gravity="bottom"
            android:paddingRight="100dp">


            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bajaré en:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/destinoSpinner"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:background="@color/white"
                android:paddingLeft="10dp"/>


        </LinearLayout>

    </LinearLayout>



    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:textSize="15dp"
        android:background="@drawable/redondea_boton"
        android:layout_height="60dp"
        android:text="Continuar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>