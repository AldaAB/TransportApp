<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TransportAppV3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/oranje_normal</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.TemaP" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/oranje_normal</item>
        <item name="colorPrimaryDark">@color/oranje_dark</item>
    </style>

    <style name="Theme.TemaCodigo" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/gray_dark</item>
        <item name="colorPrimaryDark">@color/gray</item>
    </style>

    <style name="Theme.TemaNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/oranje_dark</item>
    </style>

    
    <style name="Theme.Bottom" parent="">
        <item name="android:background">@color/oranje_normal</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
    </style>
</resources>